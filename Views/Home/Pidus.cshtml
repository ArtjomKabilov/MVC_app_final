@model IEnumerable<KutseApp.Models.Pidu>

@{
    ViewBag.Title = "Pidus";
}

<h2>Pidus</h2>

<p>
    @Html.ActionLink("Uus", "Createpidus")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Muuda", "Editpidus", new { id = item.Id }) |
            @Html.ActionLink("Kustuta", "Deletepidus", new { id = item.Id })
        </td>
    </tr>
}

</table>
